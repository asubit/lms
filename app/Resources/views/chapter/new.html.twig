{% extends 'base.html.twig' %}

{% block body %}
    <ol class="breadcrumb">
        <li><a href="{{ path('index') }}">Home</a></li>
        <li><a href="{{ path('chapter_index') }}">Chapter list</a></li>
        <li class="active">Chapter creation</li>
    </ol>

    <h1>Chapter creation</h1>

    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
        <div class="form-group">
            <label for="chapter_lesson" class="col-sm-2 control-label">Lesson</label>
            <div class="col-sm-10">
                {{ form_widget(form.lesson, { 'attr': {'class': 'form-control'} }) }}
            </div>
        </div>
        <div class="form-group">
            <label for="chapter_number" class="col-sm-2 control-label">number</label>
            <div class="col-sm-10">
                {{ form_widget(form.number, { 'attr': {'class': 'form-control'} }) }}
            </div>
        </div>
        <div class="form-group">
            <label for="chapter_name" class="col-sm-2 control-label">name</label>
            <div class="col-sm-10">
                {{ form_widget(form.name, { 'attr': {'class': 'form-control'} }) }}
            </div>
        </div>
        <div class="form-group">
            <label for="chapter_content" class="col-sm-2 control-label">content</label>
            <div class="col-sm-10">
                {{ form_widget(form.content, { 'attr': {'class': 'form-control tinymce'} }) }}
            </div>
        </div>
        {{ form_widget(form) }}
        <button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-floppy-disk"></span> Create</button>
    {{ form_end(form) }}
{% endblock %}
