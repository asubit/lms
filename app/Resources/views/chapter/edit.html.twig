{% extends 'base.html.twig' %}

{% block body %}
    <h1>Lesson {{ chapter.lesson.name }}</h1>

    <div class="row">
        <div class="col-md-12">
            <table class="table">
                <tbody>
                <tr>
                    <th>Name</th>
                    <td>{{ chapter.lesson.name }}</td>
                </tr>
                <tr>
                    <th>Theme</th>
                    <td>{{ chapter.lesson.theme }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ chapter.lesson.description }}</td>
                </tr>
                <tr>
                    <th>Content</th>
                    <td>{{ chapter.lesson.content }}</td>
                </tr>
                <tr>
                    <th>Duration</th>
                    <td>{% if chapter.lesson.duration %}{{ chapter.lesson.duration|date('H:i:s') }}{% endif %}</td>
                </tr>
                <tr>
                    <th>Author</th>
                    <td>{% if chapter.lesson.author %}{{ chapter.lesson.author.username }}{% endif %}</td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>



    <h2>Chapter {{ chapter.number }}</h2>

    {{ form_start(edit_form, { 'attr': {'class': 'form-horizontal'} }) }}
        <div class="form-group">
            <label for="chapter_number" class="col-sm-2 control-label">Number</label>
            <div class="col-sm-10">
                {{ form_widget(edit_form.number, { 'attr': {'class': 'form-control'} }) }}
            </div>
        </div>
        <div class="form-group">
            <label for="chapter_name" class="col-sm-2 control-label">Title</label>
            <div class="col-sm-10">
                {{ form_widget(edit_form.name, { 'attr': {'class': 'form-control'} }) }}
            </div>
        </div>
        <div class="form-group">
            <label for="chapter_content" class="col-sm-2 control-label">Content</label>
            <div class="col-sm-10">
                {{ form_widget(edit_form.content, { 'attr': {'class': 'form-control'} }) }}
            </div>
        </div>
        {{ form_rest(edit_form) }}
        <input type="submit" class="btn btn-primary" value="Save" />
    {{ form_end(edit_form) }}

    <ul>
        <li>
            <a href="{{ path('chapter_index') }}">Back to the list</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
