{% extends 'base.html.twig' %}

{% block body %}
    <h1>Chapter</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ chapter.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ chapter.name }}</td>
            </tr>
            <tr>
                <th>Number</th>
                <td>{{ chapter.number }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ chapter.content }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('chapter_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('chapter_edit', { 'id': chapter.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
