{% extends 'base.html.twig' %}

{% block body %}
    <h1>Lesson edit</h1>

    {{ form_start(edit_form) }}
    {{ form_widget(edit_form) }}
    <input type="submit" value="Edit" />
    {{ form_end(edit_form) }}

    {% if lesson.chapters|length > 0 %}
        {% for lessonChapter in lesson.chapters %}
            <h2>Chapter {{ lessonChapter.number }}</h2>

            <div class="row">
                <div class="col-md-12">
                    <table class="table">
                        <tbody>
                        <tr>
                            <th>Number</th>
                            <td>{{ lessonChapter.number }}</td>
                        </tr>
                        <tr>
                            <th>Title</th>
                            <td>{{ lessonChapter.name }}</td>
                        </tr>
                        <tr>
                            <th>Content</th>
                            <td>{{ lessonChapter.content }}</td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        {% endfor %}
    {% endif %}



    <ul>
        <li>
            <a href="{{ path('lesson_index') }}">Back to the list</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
