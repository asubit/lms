{% extends 'base.html.twig' %}

{% block body %}
    <h1>Lesson</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ lesson.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ lesson.name }}</td>
            </tr>
            <tr>
                <th>Theme</th>
                <td>{{ lesson.theme }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ lesson.description }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ lesson.content }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{% if lesson.duration %}{{ lesson.duration|date('H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{% if lesson.author %}{{ lesson.author.username }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('lesson_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('lesson_edit', { 'id': lesson.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
