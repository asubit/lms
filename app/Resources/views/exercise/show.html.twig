{% extends 'base.html.twig' %}

{% block body %}
    <h1>Exercise</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ exercise.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ exercise.name }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ exercise.content }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('exercise_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('exercise_edit', { 'id': exercise.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
