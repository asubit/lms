{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-6">
            <div class="panel panel-default">
                <div class="panel-heading">Create a lesson</div>
                <div class="panel-body">
                    <p>Contribute and share your knowledge.</p>
                    <p><a href="{{ path('lesson_new') }}" class="btn btn-success"><span class="glyphicon glyphicon-plus"></span> Create a lesson</a></p>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="panel panel-default">
                <div class="panel-heading">Learn existing lesson</div>
